# TaskAuction/client/.env

# Development Environment
NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_SERVER_URL=http://localhost:5000

# Socket.IO Configuration
VITE_SOCKET_URL=http://localhost:5000

# File Upload Configuration
VITE_UPLOADS_BASE_URL=http://localhost:5000/uploads
VITE_MAX_FILE_SIZE=5242880

# App Configuration
VITE_APP_NAME=TaskAuction
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Student Task Bidding Platform

# Default Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_DEFAULT_CHAT_PAGE_SIZE=50

# UI Configuration
VITE_THEME=light
VITE_PRIMARY_COLOR=#3B82F6

# Feature Flags
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_ANALYTICS=false

# Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_LOGGER=true

# Security
VITE_ENABLE_HTTPS=false

# Cache Configuration
VITE_CACHE_TIMEOUT=300000
VITE_CHAT_CACHE_TIMEOUT=120000

# Real-time Configuration
VITE_SOCKET_TIMEOUT=20000
VITE_SOCKET_RECONNECTION_ATTEMPTS=5
VITE_SOCKET_RECONNECTION_DELAY=1000

# Task Configuration
VITE_MIN_TASK_BUDGET=50
VITE_MAX_TASK_BUDGET=2000
VITE_DEFAULT_TASK_DEADLINE_DAYS=7

# Bid Configuration
VITE_MAX_BID_DESCRIPTION_LENGTH=500
VITE_BID_EDIT_TIMEOUT=300000

# Chat Configuration
VITE_MAX_MESSAGE_LENGTH=2000
VITE_MESSAGE_EDIT_TIMEOUT=900000
VITE_TYPING_INDICATOR_TIMEOUT=1000

# File Types
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/gif
VITE_ALLOWED_DOCUMENT_TYPES=application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Rating System
VITE_MIN_RATING=1
VITE_MAX_RATING=5

# Notification Configuration
VITE_NOTIFICATION_TIMEOUT=5000
VITE_MAX_NOTIFICATIONS=50

# Search Configuration
VITE_MIN_SEARCH_LENGTH=2
VITE_SEARCH_DEBOUNCE_DELAY=300

# Date/Time Configuration
VITE_DATE_FORMAT=MM/dd/yyyy
VITE_TIME_FORMAT=HH:mm
VITE_DATETIME_FORMAT=MM/dd/yyyy HH:mm

# Error Handling
VITE_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY=1000

# Performance
VITE_ENABLE_LAZY_LOADING=true
VITE_IMAGE_OPTIMIZATION=true